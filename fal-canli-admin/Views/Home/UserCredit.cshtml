@model List<UserCreditModel>
@{
    ViewData["Title"] = "Kullanıcı Kredi Kullanımı";
}

<div class="container" id="kt_content_container">

    <div class="card">

        <div class="card-body fs-6 p-10 p-lg-15">

            <div class="py-10">
                <h1 class="anchor fw-bolder mb-5" id="zero-configuration">
                    <a href="#zero-configuration"></a>Kullanıcı Kredi Kullanımı
                </h1>
                <a href="/Home/UserCreditAddOrUpdate" class="btn btn-primary">Yeni Ekle</a>
                <div class="py-5">
                    <div id="kt_datatable_example_1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="table-responsive">
                            <table id="kt_datatable_example_1" class="table table-row-bordered gy-5">
                                <thead>
                                    <tr class="fw-bold fs-6 text-muted">
                                        <th>Kullanıcı</th>
                                        <th>Miktar</th>
                                        <th>Yükleme/Harcama</th>
                                        <th>Falcı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            var userNameSurname = item.userModel != null ? item.userModel.name + ' ' + item.userModel.lastname : "-";
                                            var fortuneTellerNameSurname = item.fortuneTellerModel != null ? item.fortuneTellerModel.userModel.name + ' ' + item.fortuneTellerModel.userModel.lastname : "-";
                                            <tr>
                                                <td>@userNameSurname</td>
                                                <td>@item.amount</td>
                                                <td>@item.type</td>
                                                <td>@fortuneTellerNameSurname</td>
                                                <td><a href="/Home/UserCreditAddOrUpdate?id=@item._id" class="btn btn-primary">Güncelle</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Burç</th>
                                        <th>Fal Başlık</th>
                                        <th>Fal İçerik</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

@section Scripts {
    <script>
        $("#kt_datatable_example_1").DataTable();
    </script>
}
